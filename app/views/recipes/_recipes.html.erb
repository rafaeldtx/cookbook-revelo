<div class="row">
  <% @recipes.each do |recipe| %>
  <div class="col-sm-6 col-md-4 col-xs-12">
    <div class="card">
      <div class="card-body">
        <h3><%= link_to recipe.title, recipe %></h3>
        <h4>Tipo: <%= recipe.recipe_type.name %></h3>
        </div>
      </div>
    </div>
  <% end %>
</div>